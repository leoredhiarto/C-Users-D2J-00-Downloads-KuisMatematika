<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.d2j_00.kuismatematika.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New"
        android:id="@+id/btnsoal"
        android:onClick="newpr"/>

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:text="First Number"
        android:textAlignment="center"

        android:layout_below="@+id/btnsoal"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:text="Operator"
        android:layout_alignBaseline="@+id/text1"
        android:layout_alignBottom="@+id/text1"
        android:layout_toRightOf="@+id/text1"
        android:layout_toEndOf="@+id/text1"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        android:text="Second Number"
        android:layout_alignBaseline="@+id/text2"
        android:layout_alignBottom="@+id/text2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_below="@+id/text1"
        android:layout_marginTop="15dp"
        android:text="0"
        android:textAlignment="center"
        android:id="@+id/rndmangk1"
        />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_alignBaseline="@+id/rndmangk1"
        android:layout_alignBottom="@+id/rndmangk1"
        android:layout_centerHorizontal="true"
        android:text="+"
        android:textAlignment="center"
        android:id="@+id/editoperator"
        />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:enabled="false"
        android:layout_alignBaseline="@+id/editoperator"
        android:layout_alignBottom="@+id/editoperator"
        android:layout_alignParentRight="true"
        android:id="@+id/rndmangk2"
        android:layout_alignParentEnd="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rndmangk1"
        android:layout_marginTop="20dp"
        android:id="@+id/editisi"
        android:text="0"
        android:textAlignment="center"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bttncek"
        android:layout_below="@id/editisi"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:text="Check Answer"
        android:onClick="cek"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Answer"
        android:layout_below="@id/bttncek"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/text4"
        />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/text4"
        android:id="@+id/text5"
        android:text="0"
        />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/text5"
        android:id="@+id/text6"
        android:text="0"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:text="Your Answer is Wrong"
        android:layout_alignTop="@id/text6"
        android:layout_alignLeft="@+id/text8"
        android:layout_alignStart="@+id/text8"
        android:id="@+id/text7"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:id="@+id/text8"
        android:text="Your Answer is Correct"
        android:layout_alignBaseline="@id/text5"
        android:layout_alignBottom="@id/text5"
        android:layout_toRightOf="@id/rndmangk1"
        android:layout_toEndOf="@id/rndmangk1"
        />
</RelativeLayout>
